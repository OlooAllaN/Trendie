<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pro.soft.inzi.mapapp11.MapMain"
    tools:showIn="@layout/activity_map_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accountHandle"
        android:id="@+id/accountHandle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_below="@+id/feedTab" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accountPassword"
        android:id="@+id/accountPassword"
        android:layout_below="@+id/accountHandle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_marginTop="19sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:layout_below="@+id/handleText"
        android:layout_alignLeft="@+id/handleText"
        android:layout_alignStart="@+id/handleText"
        android:layout_alignRight="@+id/handleText"
        android:layout_alignEnd="@+id/handleText"
        android:hint="User Password" />

    <EditText
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:id="@+id/handleText"
        android:layout_toRightOf="@+id/accountPassword"
        android:layout_toEndOf="@+id/accountPassword"
        android:hint="User Handle"
        android:layout_below="@+id/feedTab" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/createButton"
        android:layout_below="@+id/accountPassword"
        android:layout_toRightOf="@+id/accountPassword"
        android:layout_toEndOf="@+id/accountPassword"
        android:layout_marginTop="53dp"
        android:onClick="onLogin" />


</RelativeLayout>